package {	import flash.display.MovieClip;	import flash.display.DisplayObject;	import flash.geom.ColorTransform;	import flash.events.Event;	public class Burger extends MovieClip 	{		public var speed;		public var trash;				public function Burger() 		{			scaleX = 2;			scaleY = 2;			speed = 6;			trash = false;			addEventListener(Event.ADDED_TO_STAGE, init);		}				public function init(evt:Event){			removeEventListener(Event.ADDED_TO_STAGE, init);			x = stage.stageWidth*Math.random();			y = -this.height;		}  		public function remove():void{			trash = true;		} 		public function update(dT:Number):void 		{			y = y + speed*dT;			if(y > stage.stageHeight + this.height){				trash = true;			}		}	}}