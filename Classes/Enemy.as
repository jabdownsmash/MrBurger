package {	import flash.display.MovieClip;	import flash.display.DisplayObject;	import flash.geom.ColorTransform;	import flash.events.Event;	public class Enemy extends MovieClip 	{		public var speed;		public var trash;		public var counter:int;		public var frame:int;				public function Enemy() 		{			scaleX = 2;			scaleY = 2;			speed = 6;			trash = false;			counter = 0;			frame = 0;			addEventListener(Event.ADDED_TO_STAGE, init);		}				public function init(evt:Event){			removeEventListener(Event.ADDED_TO_STAGE, init);			x = stage.stageWidth*Math.random();			y = -this.height;		}  		public function remove():void{			trash = true;		} 		public function update(dT:Number):void 		{			y = y + speed*dT;			if(y > stage.stageHeight + this.height){				trash = true;			}			counter+=1;			if (counter > 1){				frame++;				if (frame == 7){					frame = 1;				}				counter = 0;			}			gotoAndStop(frame);		}	}}